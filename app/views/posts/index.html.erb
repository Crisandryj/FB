<div>
  <%= form_with model: @post do |form| %>
  <% form.hidden_field :user, value: @user%>
    <p><%= form.label :body, "Post:" %></p>
    <p><%= form.text_area :body, size: "60x10" %></p>
    <p><%= form.submit "Submit" %></p>
  <% end %>
</div>

<div class="posts">
  <% @posts.each do |post| %>
      <div class = "post">
        <p><%= post.body %></p>
        <p><%= post.user.email %></p>
      </div>
  <% end %>
</div>
